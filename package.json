{
    "name": "acme-aem-tool",
    "version": "1.3.6",
    "engines": {
        "node": ">=11.14.0"
    },
    "description": "A tool to generate Storybook stories from AEM content.",
    "main": "main.js",
    "bin": {
        "acme": "./index.js"
    },
    "scripts": {
        "test": "jest",
        "test:debug": "node --nolazy --inspect-brk=9229 node_modules/.bin/jest --runInBand",
        "lint:fix": "eslint *.js --fix",
        "lint": "eslint *.js",
        "release": "auto shipit",
        "prettify": "prettier *.js --write"
    },
    "keywords": [
        "aem",
        "storybook"
    ],
    "author": "Sourabh sen <sourabhchill@gmail.com>",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/sourabhsen/acme-tool-aem.git"
    },
    "dependencies": {
        "app-module-path": "^2.2.0",
        "auto": "^11.1.6",
        "chalk": "^4.0.0",
        "change-case": "^4.1.1",
        "cheerio": "^1.0.0-rc.3",
        "content-type": "^1.0.4",
        "core-js": "^3.6.5",
        "css": "^2.2.4",
        "debug": "^4.1.1",
        "humanize-string": "^2.1.0",
        "hygen": "^5.0.3",
        "jsonpath-plus": "^4.0.0",
        "mime-types": "^2.1.27",
        "mkdirp": "^1.0.4",
        "node-fetch": "^2.6.0",
        "prettier": "^2.0.5",
        "prompts": "^2.3.2",
        "supports-color": "^7.1.0",
        "title-case": "^3.0.2",
        "xml2js": "^0.4.23",
        "yargs": "^15.3.1",
        "yargs-interactive": "^3.0.0"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jest": "^23.9.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "lint-staged": "^10.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(js|html|css|json)": [
            "prettier --write"
        ],
        "*.js": [
            "eslint --fix"
        ]
    }
}
